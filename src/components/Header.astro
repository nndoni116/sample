<header class="fixed left-0 right-0 px-6 py-8 bg-white z-40">
  <nav class="max-w-5xl mx-auto flex items-center justify-between">
    <!-- Logo -->
    <a href="#hero" class="font-display text-3xl font-bold text-espresso tracking-wide">
      Café <span class="text-latte italic">Ouka</span>
    </a>
    <!-- Desktop Nav -->
    <ul class="hidden md:flex items-center gap-8 text-base font-sans font-medium text-mocha tracking-widest uppercase">
      <li><a href="#menu" class="hover:text-espresso transition-colors duration-200">Menu</a></li>
      <li><a href="#hours" class="hover:text-espresso transition-colors duration-200">営業時間</a></li>
      <li><a href="#access" class="hover:text-espresso transition-colors duration-200">アクセス</a></li>
    </ul>
    <!-- Mobile hamburger -->
    <button id="menu-toggle" class="md:hidden flex flex-col gap-1.5 p-2" aria-label="メニューを開く">
      <span class="block w-6 h-0.5 bg-espresso transition-all" id="bar1"></span>
      <span class="block w-6 h-0.5 bg-espresso transition-all" id="bar2"></span>
      <span class="block w-4 h-0.5 bg-espresso self-end transition-all" id="bar3"></span>
    </button>
  </nav>
  <!-- Mobile drawer -->
  <div id="mobile-menu" class="hidden md:hidden mt-4 bg-cream-dark/95 backdrop-blur-sm rounded-2xl p-6 shadow-lg border border-latte/20">
    <ul class="flex flex-col gap-6 text-center font-display text-2xl text-espresso">
      <li><a href="#menu" class="hover:text-latte transition-colors" onclick="document.getElementById('mobile-menu').classList.add('hidden')">Menu</a></li>
      <li><a href="#hours" class="hover:text-latte transition-colors" onclick="document.getElementById('mobile-menu').classList.add('hidden')">営業時間</a></li>
      <li><a href="#access" class="hover:text-latte transition-colors" onclick="document.getElementById('mobile-menu').classList.add('hidden')">アクセス</a></li>
    </ul>
  </div>
</header>

<script>
  document.getElementById('menu-toggle')?.addEventListener('click', () => {
    document.getElementById('mobile-menu')?.classList.toggle('hidden');
  });
</script>
